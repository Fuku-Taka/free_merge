= render "header"
.Main
  .ShowMain
    .ContentLeft
    .ContentRight
      .TopContent
        .ItemBox
          %h2.ItemBox__name
            ee
          .ItemBox__body
            %ul
              %li
                =image_tag("material/pict/pict-reason-01.jpg", class: "imgmain")
                %ul
                  %li
                    = image_tag("material/pict/pict-reason-01.jpg", class: "img")
                  %li
                    = image_tag("material/pict/pict-reason-01.jpg", class: "img") 
          .ItemBox__price
            %span ¥1000
          .ItemBox__priceDetail
            （税込）送料込み
          .ItemBox__detail
            eee
          .ItemBox__table
            %table
              %tr
                %th 出品者
                %td ss
              %tr
                %th カテゴリー
                %td 
                  %br
                  = link_to "#", class: "link" do
                    ベビー・キッズ
                  %br
                  = link_to "#", class: "link" do
                    ベビー服（男の子用）〜95cm
                  %br
                  = link_to "#", class: "link" do
                    アウター
              %tr
                %th ブランド
                %td
              %tr
                %th 商品のサイズ
                %td
              %tr
                %th 商品の状態
                %td 新品/未使用
              %tr
                %th 配送料の負担
                %td 送料込み（出品者負担）
              %tr
                %th 発送元の地域
                %td 
                  = link_to "#", class: "link" do
                    北海道
              %tr
                %th 発送日の目安
                %td 1~2日で発送
          .ItemBox__optionalArea
            %ul
              %li
                %button{type: "button", class:'btn'}
                  お気に入り 0
            %ul
              %li
              = link_to "#", class: "report" do
                不適切な商品の通報
        .CommentBox
          = form_with(id: "new_comment") do |f|
            = f.text_area :content, class: 'commentbody'
            %p.noticeMsg
              相手のことを考え丁寧なコメントを心がけましょう。
              %br
              不快な言葉遣いなどは利用制限や退会処分となることがあります。
          %button.commentBtn{type: 'submit', name: 'button'}
            コメントする
      .Links
        = link_to '#',class: 'links__left' do
          < 前の商品
        = link_to '#',class: 'links__right' do
          後ろの商品 >
      .RelatedItems
        = link_to '#',class: 'RelatedItems__body' do
          ベビー・キッズをもっと見る
        .ContentLists
          .ContentList
            = link_to '#' do
              = image_tag 'https://s3-ap-northeast-1.amazonaws.com/mercarimaster/uploads/captured_image/content/13/a007.png', alt: '', height: '150px', width: '100%', class: ''
              .ContentList__body
                %h3.name contents3
                .Details
                  %ul
                    %li 50000円
                    %li
                      = icon('fa', 'star')
                      0
                  %p (税込)
  = render "app_banner"
  = render "purchase_btn"
= render "footer"

