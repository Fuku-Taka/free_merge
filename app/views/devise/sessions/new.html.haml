= render "contents/header"

.Main
  .Single_container
    %h2.Single_head ログイン
    .Register_form
      = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        .field
          = f.label :メールアドレス
          %br/
          = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス", class:"field__input"
        .field
          = f.label :パスワード
          %br/
          = f.password_field :password, autocomplete: "current-password", placeholder: "７文字以上の半角英数字", class:"field__input"
        - if devise_mapping.rememberable?
          .field
            = f.check_box :remember_me
            = f.label :remember_me
        .field
          = f.submit "ログイン", class:"btn-default btn-blue"

= render "contents/footer"