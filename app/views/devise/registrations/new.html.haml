= render "contents/header"

.Main
  .Single_container
    %h2.Single_head 新規会員情報入力
    .Register_form
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = render "devise/shared/error_messages", resource: resource
        .field
          = f.label :ニックネーム
          %span.field__require
            必須
          %br/
          = f.text_field :nickname, placeholder: '例) ジャーマン', class:"field__input"
        .field
          = f.label :メールアドレス
          %span.field__require
            必須
          %br/
          = f.email_field :email, autofocus: true, autocomplete: "email", class:"field__input"
        .field
          = f.label :パスワード
          %span.field__require
            必須
          %br/
          = f.password_field :password, autocomplete: "new-password", placeholder: '７文字以上の半角英数字', class:"field__input"
        .field
          = f.label :パスワードの確認
          %br/
          = f.password_field :password_confirmation, autocomplete: "new-password", placeholder: '７文字以上の半角英数字', class:"field__input"
        .field
          = f.label :本名
          %span.field__require
            必須
          %br/
          = f.text_field :family_name, placeholder: '例) 田中', class:"field__input"
          = f.text_field :first_name, placeholder: '例) 太郎', class:"field__input"
        .field
          = f.label :フリガナ
          %span.field__require
            必須
          %br/
          = f.text_field :family_name_kana, placeholder: '例) タナカ', class:"field__input"
          = f.text_field :first_name_kana, placeholder: '例) タロウ', class:"field__input"
        .field
          = f.label :生年月日
          %span.field__require
            必須
          %br/
          = f.date_select :birthday, {use_month_numbers: true,start_year: 1930, end_year: (Time.now.year - 10), default: Date.new(1989, 1, 1), prompt:"--"},{class:"birthday"}
        .field
          = f.submit "次へ進む", url: "address_path", class:"btn-default btn-blue"

= render "contents/footer"